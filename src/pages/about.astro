---
import Layout from "@/layouts/Layout.astro";
import EmployeeGrid from "@/components/EmployeeGrid.astro";
import { PortableText } from "astro-portabletext";
import type { aboutPage } from "@/lib/interface";
import { sanityClient } from "sanity:client";
import { urlFor } from "@/lib/sanity";

const data: aboutPage = await sanityClient.fetch(
  `*[_type == 'about'] {
    title,
    ingress,
    heroImage,
    description,
  }[0]`,
);
---

<Layout title="Om oss â€” Bryggverket">
  <div class="singlePage">
    <div class="hero">
      <img
        class="heroBgImage"
        src={urlFor(data.heroImage).url()}
        alt=""
        style="object-fit: cover; position: absolute; inset: 0; width: 100%; height: 100%;"
      />
      <div class="heroBgOverlay"></div>
      <div class="container">
        <h1>{data.title}</h1>
        <h3 class="specialIngress font-marker">{data.ingress}</h3>
      </div>
    </div>
    <div class="container marginMedium">
      <EmployeeGrid />
    </div>
    <div class="container narrow marginMedium">
      <PortableText value={data.description} />
    </div>
  </div>
</Layout>
